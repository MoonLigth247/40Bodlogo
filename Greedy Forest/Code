#include <bits/stdc++.h>
using namespace std;

int getMinimumCost(int k, vector<int> c) {
    sort(c.begin(), c.end(), greater<int>());
    int totalCost = 0;
    int purchaseCount = 0;

    for (int i = 0; i < c.size(); i++) {
        totalCost += (purchaseCount / k + 1) * c[i];
        purchaseCount++;
    }

    return totalCost;
}

int main() {
    int n, k;
    cin >> n >> k;

    vector<int> c(n);
    for (int i = 0; i < n; i++) {
        cin >> c[i];
    }

    int minimumCost = getMinimumCost(k, c);

    cout << minimumCost << endl;

    return 0;
}
